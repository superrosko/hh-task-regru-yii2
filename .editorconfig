root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[{.eslintrc, .babelrc, jest.config, .stylelintrc, *.bowerrc, *.jsb3, *.jsb2, *.json}]
indent_size = 2

[*.scss]
indent_size = 2

[{*.cjs, *.js}]
indent_size = 2

[{*.yml, *.yaml}]
indent_size = 2

[{composer.lock, composer.json}]
indent_size = 2
